<p style="color: green"><%= notice %></p>

<h1>List Menu Makanan</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Category</th>
        </tr>
      </thead>
    
      <tbody>
        <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.name %></td>
            <td><%= menu.price %></td>
            <td><%= menu.description %></td>
            <td><%= menu.type.name %></td>
            <td><%= link_to 'Show', menu, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_menu_path(menu), class: 'btn btn-primary' %></td>
            <td><%= button_to "Delete", menu, method: :delete, class:'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
          
    <%= link_to "Customer", customers_path, class:'btn btn-outline-dark' %>
    <%= link_to "Order", orders_path, class:'btn btn-outline-dark' %>
    <%= link_to "New menu", new_menu_path, class: 'btn btn-outline-dark' %>
    <%= link_to "New Type", types_path, class:'btn btn-outline-dark' %>

  </div>
</div>
<br>