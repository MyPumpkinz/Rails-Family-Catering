<p style="color: green"><%= notice %></p>

<h1>Customers</h1>

<table class="table table-striped table-bordered">

    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="2">Action</th>
    </tr>

  <tbody>
    <% @customers.each_with_index do |customer, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td>
          <% link_to "Show", customer, class:'btn btn-info' %>
          <%= link_to "Edit", edit_customer_path(customer), class:'btn btn-primary' %>
      </td>
      <td>
          <%= button_to "Delete", customer, method: :delete, class:'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
      
<%= link_to "Menu", root_path, class:'btn btn-outline-dark' %>
<%= link_to "New Customer", new_customer_path, class:'btn btn-outline-dark' %>